@import url(https://fonts.googleapis.com/css?family=Roboto:400,100,100italic,300,300italic,400italic,500,500italic,700,700italic,900,900italic);
@import 'client.styl'
@import 'bootstrap-fix.styl'

*
    font-family: Roboto, sans-serif;
    margin: 0;
    padding: 0;


body
    height: 100%;

button
    background: none;
    outline: none;
    border: none;

#logo
    height: 100%;
    margin-left: 10px;



.menu-container
    position: fixed;
    z-index: 10;
    width: 100%;
    height: 10%;
    min-height: 100px;
    padding: 0;

    background: white


.empty-div
    transition: 0.5s ease;


.primary-menu
    box-sizing: border-box;
    width: 100%;
    height: 50%;
    padding-top: 7px;
    padding-right: 10px;
    padding-left: 10px;

    border-bottom: 1px solid rgb(235,235,235);


.secondary-menu
    position: absolute;
    z-index: 100 !important;
    bottom: 0;
    overflow: hidden;
    box-sizing: border-box;
    width: 100%;
    height: 50px;


.secondary-menu-items
    display: inline-block;
    width: 100%;
    height: 100%;
    min-height: 50px;
    padding-right: 10px;
    padding-left: 10px;
    /*transition: .25s ease;*/


.app-container
    z-index: -1;
    overflow: auto;
    width: 100%;
    height: 100%;
    margin-top: -4px;

.post-info
    display: table;
    width: 100%;


.preview
    background-repeat: no-repeat;
    /*background-attachment: fixed;*/
    /*background-position: center;*/


.post-info-field-container
    display: table-row;
    width: 100%;
    /*height: 40px;*/


.post-info-field-container
    span.field
        font-size: 12px;
        font-weight: normal;
        display: table-cell;
        width: 20%;
        padding: 19px 10px;
        border-collapse: collapse;
        color: rgb(158, 158, 158);
        border-bottom: 1px solid rgb(210,210,210);


.post-info-field-container
    span.value
        font-size: 12px;
        display: table-cell;
        width: 60%;
        border-collapse: collapse;
        border-bottom: 1px solid rgb(210,210,210);


.folder-inner-container
    position: relative;
    width: 100%;
    height: 60px;
    padding: 10px;
    transition: 0.1s all;


.file-container
    width: 100%;
    height: 60px;
    padding: 10px 10px 10px 5%;
    transition: 0.1s all;


.file-container:hover
    background: rgb(245,245,245);


.file-name
    display: block;
    padding-left: 5px;
    /*height: 60px;*/


.file-date
    font-size: 11px;
    display: block;
    padding-left: 5px;




.ui-container
    background: white;
    /*padding: 1% 2% 1% 2%;*/


.selected-item
    position: fixed;
    z-index: 5;
    display: none;
    width: 150px;


.selected-item-label
    font-size: 15px;
    overflow: hidden;
    margin-bottom: 1%;
    padding: 1% 5%;
    white-space: nowrap;
    text-overflow: ellipsis;
    border-left: 3px solid #7cb2a3;
    background: rgba( 255,255,255, 1);


.none-movable-item
    background: rgba(244, 67, 54, .4 );




.post-list-container
    overflow: auto;
    height: 100%;
    transition: all 0.2s;
    border-right: 1px solid rgb(240,240,240);
    background: white;


.post-info-container
    overflow: auto;
    height: 100%;
    background: white;


#project-editor
    overflow: auto;
    height: 100%;
    border-collapse: collapse;
    border-right: 1px solid rgb(220,220,220);
    background: rgb(240,240,240);



.project-preview
    zoom: 1;
    border-radius: 3.5px;
    box-shadow: 1px 1px 5px rgb(60,60,60);





.public-DraftEditor-content
    height: calc(100% - 50px);
    padding: 15px;
    overflow: scroll


.controls-container
    width: 100%;
    height: 48px;
    border-bottom: 1px solid rgb(220,220,220);
    margin-bottom: 2px;


.text-control-container
    float: left;
    height: 48px;
    vertical-align: middle;
    color: inherit;


.text-editor-control-button
    line-height: 48px;
    display: inline-block;
    height: 100%;
    margin-right: 5px;
    color: inherit;


.text-editor-control-active-button
    color: red;


@media only screen and (max-width : 768px)
    .post-info-container
        position: absolute;
        top: 0;
        display: none;
        overflow: auto;
        width: 100%;
        height: 100%;
        background: white;
        z-index : 20;
