@import url('https://fonts.googleapis.com/css?family=Bevan|Libre+Franklin:300,400,700|Playfair+Display+SC');

.client {

    * {

        font-family: 'Libre Franklin', sans-serif;
        color : rgb(60,60,60);
        letter-spacing: 1px;

    }


    .row {
        margin-bottom: 10;
        display: table;

    }

    header {
        background: url("http://localhost:30000//uploads/2016/10/13.jpg");
        background-size: cover;
        background-repeat: no-repeat;
        width: 100%;
        height: 60%;
        margin-bottom: 15px;
        filter: grayscale(60%);
        box-shadow: 1px 1px 5px rgba(60,60,60,0.1);
    }

    h1 {
        font-size: 45px;
        font-weight: 300;
        width: 100%;
        margin-bottom: 20px;
        padding-bottom: 20px;
        letter-spacing: 1px;
        border-bottom: 5px solid rgb(240,240,240);
    }

    p {
        margin-bottom: 0;
    }

    .element {
        text-align: center;
        /*for demonstration only*/
        width: 100%;
        height: 100%;

        display: inline-block;;
        padding : 0%;
        box-sizing: border-box;

        vertical-align: middle;
        text-align: center;


    }
    img {

        width : 100%;
        display: inline-block;

    }

    .col-lg-1,
    .col-lg-10,
    .col-lg-11,
    .col-lg-12,
    .col-lg-2,
    .col-lg-3,
    .col-lg-4,
    .col-lg-5,
    .col-lg-6,
    .col-lg-7,
    .col-lg-8,
    .col-lg-9,
    .col-md-1,
    .col-md-10,
    .col-md-11,
    .col-md-12,
    .col-md-2,
    .col-md-3,
    .col-md-4,
    .col-md-5,
    .col-md-6,
    .col-md-7,
    .col-md-8,
    .col-md-9,
    .col-sm-1,
    .col-sm-10,
    .col-sm-11,
    .col-sm-12,
    .col-sm-2,
    .col-sm-3,
    .col-sm-4,
    .col-sm-5,
    .col-sm-6,
    .col-sm-7,
    .col-sm-8,
    .col-sm-9,
    .col-xs-1,
    .col-xs-10,
    .col-xs-11,
    .col-xs-12,
    .col-xs-2,
    .col-xs-3,
    .col-xs-4,
    .col-xs-5,
    .col-xs-6,
    .col-xs-7,
    .col-xs-8,
    .col-xs-9 {
        padding: 0;
        float: none;
        display: table-cell;
        vertical-align: top;
        position: relative;

    }
}
