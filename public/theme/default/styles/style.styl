    .loading-element circle {
        transform: translate(0, 5px);
        animation-name: loading-element-animation;
        animation-duration: 1.2s;
        animation-iteration-count:infinite;
        transition: .6s ease all;

    }

    .loading-element circle:nth-of-type(1) {

        animation-delay: 0s;

    }

    .loading-element circle:nth-of-type(2) {

        animation-delay: 0.2s;

    }

    .loading-element circle:nth-of-type(3) {

        animation-delay: 0.4s;

    }

    .loading-element circle:nth-of-type(4) {

        animation-delay: 0.6s;

    }


    @-webkit-keyframes loading-element-animation {

        0%{ transform: translate(0, 5px); opacity: 1}
        50%{ transform: translate(0, 12.5px); opacity: 0.5 }
        100%{ transform: translate(0, 5px); opacity: 1 }

